<div class="fr-follow">
  <div class="fr-container">
    <div class="fr-grid-row">
      <div class="fr-col-12 fr-col-md-8">
        <div class="fr-follow__newsletter">
          <div>
            <p class="fr-h5">Abonnez-vous à notre lettre d’information</p>
            {# <p class="fr-text--sm">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas varius tortor nibh, sit amet
              tempor nibh finibus et.</p> #}
          </div>
          <div class="fr-btns-group fr-btns-group--inline-md">
            <a href="https://www.linkedin.com/newsletters/7242864226900279296/?displayConfirmation=true" target="_blank" class="fr-btn" title="S‘abonner à notre lettre d’information">
              S'abonner
            </a>
          </div>
        </div>
      </div>

      <div class="fr-col-12 fr-col-md-4">
        <div class="fr-follow__social">
          <p class="fr-h5">{{ "follow_us_description" | i18n | safe }}
          </p>
          <ul class="fr-btns-group">
            {% if metadata.facebook_url %}
              <li>
                <a class="fr-btn--facebook fr-btn" title="Facebook - Nouvelle fenêtre" href="{{ metadata.facebook_url }}" target="_blank" rel="noopener external">
                  facebook
                </a>
              </li>
            {% endif %}
            {% if metadata.mastodon_url %}
              <li>
                <a class="fr-btn--mastodon fr-btn" title="Mastodon - Nouvelle fenêtre" href="{{ metadata.mastodon_url }}" target="_blank" rel="noopener external">
                  mastodon
                </a>
              </li>
            {% endif %}
            {% if metadata.twitter_url %}
              <li>
                <a class="fr-btn--twitter-x fr-btn" title="Twitter - Nouvelle fenêtre" href="{{ metadata.twitter_url }}" target="_blank" rel="noopener external">
                  X (anciennement Twitter)
                </a>
              </li>
            {% endif %}
            {% if metadata.instagram_url %}
              <li>
                <a class="fr-btn--instagram fr-btn" title="Instagram - Nouvelle fenêtre" href="{{ metadata.instagram_url }}" target="_blank" rel="noopener external">
                  instagram
                </a>
              </li>
            {% endif %}
            {% if metadata.linkedin_url %}
              <li>
                <a class="fr-btn--linkedin fr-btn" title="Linkedin - Nouvelle fenêtre" href="{{ metadata.linkedin_url }}" target="_blank" rel="noopener external">
                  linkedin
                </a>
              </li>
            {% endif %}
            {% if metadata.youtube_url %}
              <li>
                <a class="fr-btn--youtube fr-btn" title="Youtube - Nouvelle fenêtre" href="{{ metadata.youtube_url }}" target="_blank" rel="noopener external">
                  youtube
                </a>
              </li>
            {% endif %}
            {% if metadata.peertube_url %}
              <li>
                <a class="fr-btn--peertube fr-btn" title="PeerTube - Nouvelle fenêtre" href="{{ metadata.peertube_url }}" target="_blank" rel="noopener external">
                  peertube
                </a>
              </li>
            {% endif %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
